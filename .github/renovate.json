{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "labels": [
    "dependencies"
  ],
  "osvVulnerabilityAlerts": true,
  "extends": [
    "config:base"
  ],
  "prHourlyLimit": 0,
  "assignees": [
    "bukowa"
  ],
  "bumpVersion": "patch",
  "gitIgnoredAuthors": [
    "gitbukowa@gmail.com",
    "git.bukowa@gmail.com"
  ],
  "prBodyColumns": [
    "Package",
    "Type",
    "Update",
    "Change",
    "Package file",
    "References"
  ],
  "commitMessageAction": "{{{updateType}}} update",
  "semanticCommits": "enabled",
  "semanticCommitScope": "deps",
  "semanticCommitType": "build",
  "commitBodyTable": true,
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions",
      "labels": [
        "github_actions"
      ],
      "pinDigests": true,
      "semanticCommitType": "ci",
      "semanticCommitScope": "github_actions"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "labels": [
        "docker"
      ],
      "pinDigests": true,
      "semanticCommitType": "build",
      "semanticCommitScope": "deps,docker"
    },
    {
      "matchDatasources": [
        "crate"
      ],
      "labels": [
        "rust"
      ],
      "pinDigests": true,
      "semanticCommitType": "build",
      "semanticCommitScope": "deps,rust"
    },
    {
      "matchDatasources": [
        "npm"
      ],
      "labels": [
        "javascript"
      ],
      "pinDigests": true,
      "semanticCommitType": "build",
      "semanticCommitScope": "deps,javascript"
    }
  ]
}